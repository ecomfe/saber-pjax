/**
 * @file loading 样式定义
 */

.mask
    animate('fadeIn', 0.1s)
    absolute: 0 0 0 0
    background: rgba(0, 0, 0, .45)

// 全局 loading 样式定义
#gloading
    $loading-width = 125px
    $half-width = $loading-width / 2 * -1

    fixed: 50% _ _ 50%
    z-index: 1000
    width: $loading-width
    height: $loading-width
    margin: $half-width 0 0 $half-width
    transform: scale(0.6)

    .dot
        position: absolute
        background-color: rgb(255, 255, 255, 0.8)
        height: 22px
        width: 22px
        border-radius: 12px
        animation-name: dot-run
        animation-duration: 1.2s
        animation-iteration-count: infinite
        animation-direction: normal

    .dot-1
        left: 0
        top: 51px
        animation-delay: 0.45s

    .dot-2
        left: 15px
        top: 15px
        animation-delay: 0.6s

    .dot-3
        left: 51px
        top: 0
        animation-delay: 0.75s

    .dot-4
        right: 15px
        top: 15px
        animation-delay: 0.9s

    .dot-5
        right: 0
        top: 51px
        animation-delay: 1.05s

    .dot-6
        right: 15px
        bottom: 15px
        animation-delay: 1.2s

    .dot-7
        left: 51px
        bottom: 0
        animation-delay: 1.35s

    .dot-8
        left: 15px
        bottom: 15px
        animation-delay: 1.5s

@keyframes dot-run
    0%
        background-color: rgb(0, 0, 0)

    100%
        background-color: rgb(255, 255, 255)


